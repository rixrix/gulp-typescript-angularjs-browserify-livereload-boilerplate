{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "noEmitHelpers": false,
    "moduleResolution": "node"
  },
  "exclude": [
    "typings/index.d.ts"
  ],
  "filesGlob": [
    "app/**/*.ts",
    "platform/**/*.ts",
    "!node_modules/**",
    "typings/index.d.ts"
  ],
  "awesomeTypescriptLoaderOptions": {
    "resolveGlobs": true,
    "forkChecker": true
  },
  "compileOnSave": false,
  "buildOnSave": false
}
